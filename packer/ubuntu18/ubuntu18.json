{
    "variables": {
      "build_name": ""
    },
    "provisioners": [
      {
      "type": "shell",
      "execute_command": "echo 'packer' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
      "script": "scripts/setup.sh"
    },
        {
        "type": "ansible",
        "ansible_env_vars": [ "ANSIBLE_ROLES_PATH=/home/ron/packer-ansible/ansible/roles"
        ],
        "extra_arguments": [
          "--extra-vars", "ansible_python_interpreter=/usr/bin/python3"
        ],
        "playbook_file": "{{user `playbook_file`}}"
      }
    ],
  "builders":
  [
    {
      "type": "qemu",
      "iso_urls": [
        "http://cdimage.ubuntu.com/releases/bionic/release/ubuntu-18.04.3-server-amd64.iso"
        ],
      "iso_checksum": "7d8e0055d663bffa27c1718685085626cb59346e7626ba3d3f476322271f573e",
      "iso_checksum_type": "sha256",
      "output_directory": "{{user `output_directory`}}",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "disk_size": 5000,
      "headless": true,
      "http_directory": "http",
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_timeout": "60m",
      "vm_name": "{{user `build_name`}}.qcow2",
      "cpus": 2,
      "memory": 1024,
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "<esc><wait>",
        "<enter><wait>",
        "/install/vmlinuz<wait>",
        " auto<wait>",
        " console-setup/ask_detect=false<wait>",
        " console-setup/layoutcode=us<wait>",
        " console-setup/modelcode=pc105<wait>",
        " debconf/frontend=noninteractive<wait>",
        " debian-installer=en_US<wait>",
        " fb=false<wait>",
        " initrd=/install/initrd.gz<wait>",
        " kbd-chooser/method=us<wait>",
        " keyboard-configuration/layout=USA<wait>",
        " keyboard-configuration/variant=USA<wait>",
        " locale=en_US<wait>",
        " netcfg/get_domain=nikkyrron<wait>",
        " netcfg/get_hostname=ubuntu18<wait>",
        " grub-installer/bootdev=/dev/vda<wait>",
        " noapic<wait>",
        " preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg<wait>",
        " -- <wait>",
        "<enter><wait>"
      ]
    }
  ]
}
